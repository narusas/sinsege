	</class>

	<class name="단지평형" table="ac_aptgroup_area" lazy="true">
		<id name="code" column="code" type="string">
			<generator class="assigned" />
		</id>

		<many-to-one name="단지" class="단지" column="apt_group_code" cascade="save-update"/>

