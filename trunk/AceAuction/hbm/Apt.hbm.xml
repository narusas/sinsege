			<generator class="native" />
		</id>

		<many-to-one name="단지평형" class="단지평형" column="apt_group_area_code"
			cascade="save-update" />
		<property name="매매하한가" column="SL_PRICE" />
		<property name="매매상한가" column="SU_PRICE" />
		<property name="전세하한가" column="RL_PRICE" />
